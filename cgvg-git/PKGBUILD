# Maintainer: Mihail Konev <k.mvc@ya.ru>

pkgname=cgvg-git
pkgver=22.caa2901
pkgrel=1
pkgdesc="Grep with numerical goto"
arch=('any')
license=('MIT')
url="https://github.com/forgottenswitch/cgvg"
provides=('cgvg')
conflicts=('cgvg')
depends=('sh' 'awk' 'ag')
makedepends=()
source=(git+https://github.com/forgottenswitch/cgvg.git)
sha256sums=('SKIP')

pkgver() {
  cd ${srcdir}/cgvg
  printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  true
}

build() {
  true
}

package() {
  cd ${srcdir}/${pkgname}
  make DESTDIR=${pkgdir} install
}
