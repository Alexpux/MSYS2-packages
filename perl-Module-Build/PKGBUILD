# Maintainer: Andrea Dalle Vacche  <adallevacche@bloomberg.net>

_realname=Module-Build
pkgname=perl-${_realname}
pkgver=0.4218
pkgrel=1
pkgdesc="Module::Build - Build and install Perl modules"
arch=('any')
license=('GPL' 'PerlArtistic')
url="http://search.cpan.org/~leont/Module-Build-0.4218/lib/Module/Build.pm"
depends=('perl' 'perl-inc-latest')
groups=('perl-modules')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/L/LE/LEONT/${_realname}-${pkgver}.tar.gz")
sha256sums=('1ef0aa529a3f296f894a5e79240a77d71be60dd595e8cad3a0d04c7ea187c0d0')

prepare() {
  cd ${_realname}-${pkgver}
    }

build() {
  cd ${_realname}-${pkgver}
  perl Build.PL --installdirs vendor
  ./Build
}

check() {
  cd ${_realname}-${pkgver}
  ./Build test
}

package() {
  cd ${_realname}-${pkgver}
  ./Build install  --installdirs vendor
}
