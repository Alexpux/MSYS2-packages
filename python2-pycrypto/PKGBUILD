# Maintainer: Orphaned
# I'm not planning to maintain this, but I am planning to include a git version.
packname=pycrypto
pkgname=python2-pycrypto
pkgver=2.6.1
pkgrel=1
pkgdesc="Crypto module for python"
arch=('i686' 'x86_64')
url="https://ftp.dlitz.net/pub/dlitz/crypto/pycrypto/"
license=('custom:PyCrypto')
depends=('python2')
makedepends=('python2-setuptools')
#options=()
#install=
#changelog=
source=("$url/$packname-$pkgver.tar.gz")

md5sums=('55a61a054aa66812daf5161a0d5d7eda')

prepare() {
	cd "$packname-$pkgver"
    ./configure --build=$CARCH-msys-gnu
}

build() {
	cd "$packname-$pkgver"
    python2 setup.py build
}

package() {
	cd "$packname-$pkgver"
    python2 setup.py install --prefix="$pkgdir/" --optimize=1
}
