# Maintainer: Alexey Pavlov <alexpux@gmail.com>

pkgname="xcb-proto"
pkgver=1.11
pkgrel=1
pkgdesc="the XML-XCB protocol descriptions that libxcb uses to generate the majority of its code and API"
arch=('i686' 'x86_64')
url="http://www.x.org/"
license=('MIT')
groups=()
makedepends=('gcc')
depends=('python3')
options=()
source=("http://xorg.freedesktop.org/releases/individual/xcb/$pkgname-$pkgver.tar.bz2")
sha256sums=('b4aceee6502a0ce45fc39b33c541a2df4715d00b72e660ebe8c5bb444771e32e')

prepare() {
  cd "${srcdir}/$pkgname-$pkgver"
  autoreconf -ivf
}

build() {
  cd "${srcdir}/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

check() {
  cd "${srcdir}/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "${srcdir}/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
  install -Dm644 ./COPYING ${pkgdir}/usr/share/licenses/$pkgname/COPYING
}
