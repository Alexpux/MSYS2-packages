# Maintainer: Alexey Pavlov <alexpux@gmail.com>

pkgname="libpthread-stubs"
pkgver=0.3
pkgrel=1
pkgdesc="Stubs missing from libc for standard pthread functions (development)"
arch=('i686' 'x86_64')
url="http://www.x.org/"
license=('MIT')
groups=('development')
makedepends=('gcc')
depends=()
options=()
source=("http://xorg.freedesktop.org/releases/individual/xcb/$pkgname-$pkgver.tar.bz2")
sha256sums=('35b6d54e3cc6f3ba28061da81af64b9a92b7b757319098172488a660e3d87299')

prepare() {
  cd "${srcdir}/$pkgname-$pkgver"
  autoreconf -ivf
}

build() {
  cd "${srcdir}/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

check() {
  cd "${srcdir}/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "${srcdir}/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
  install -Dm644 ./COPYING ${pkgdir}/usr/share/licenses/$pkgname/COPYING
}
