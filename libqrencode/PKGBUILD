# Maintainer: micbou <contact@micbou.com>

pkgname=libqrencode
pkgver=v4.0.2
pkgrel=1
pkgdesc='QR Code encoding library'
arch=('i686' 'x86_64')
url='https://fukuchi.org/works/qrencode/'
license=('LGPL')
depends=('libpng12')
makedepends=('autoconf' 'automake' 'autotools-dev' 'libtool' 'pkg-config' 'gcc')
source=(https://github.com/fukuchi/libqrencode/archive/${pkgver}.tar.gz)
sha256sums=('43091fea4752101f0fe61a957310ead10a7cb4b81e170ce61e5baa73a6291ac2')

build() {
  cd ${pkgname}-${pkgver}
  ./configure \
    --prefix=/usr

  make LDFLAGS="${LDFLAGS} -no-undefined"
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
