# Maintainer: Renato Silva <br.renatosilva@gmail.com>

_name=easyoptions
pkgname=${_name}-git
pkgdesc="Easy option parsing for Ruby and Bash"
url="https://github.com/renatosilva/easyoptions"
license=(GPL2)

arch=(any)
pkgver=15.17d2030
pkgrel=1

depends=(ruby bash)
makedepends=(git)
provides=(${_name})
conflicts=(${_name})
source=("git+$url")
md5sums=(SKIP)

pkgver() {
    cd "$srcdir/${_name}"
    printf "%s.%s" $(git rev-list --count HEAD) $(git rev-parse --short HEAD)
}

package() {
    cd "$srcdir/${_name}"
    ./install.sh "$pkgdir/usr/bin"
}
