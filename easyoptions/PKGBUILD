# Maintainer: Renato Silva <br.renatosilva@gmail.com>

_name=easyoptions
pkgname=${_name}-git
pkgdesc="Easy option parsing for Ruby and Bash"
url="https://github.com/renatosilva/easyoptions"
license=(GPL2)

arch=(any)
pkgver=16.31d5a53
pkgrel=1

depends=(ruby bash)
makedepends=(git)
provides=(${_name})
conflicts=(${_name})
source=("git+$url")
md5sums=(SKIP)

pkgver() {
    cd "$srcdir/${_name}"
    printf "%s.%s" $(git rev-list --count HEAD) $(git rev-parse --short HEAD)
}

package() {
    cd "$srcdir/${_name}"
    mkdir -p "$pkgdir/usr/bin"
    mkdir -p "$pkgdir/usr/lib/ruby/vendor_ruby"
    cp -v easyoptions     "$pkgdir/usr/bin"
    cp -v easyoptions.sh  "$pkgdir/usr/bin"
    cp -v easyoptions.rb  "$pkgdir/usr/lib/ruby/vendor_ruby"
}
