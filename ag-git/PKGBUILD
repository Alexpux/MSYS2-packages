# Maintainer: Mihail Konev <k.mvc@ya.ru>

pkgname=ag
srcname=the_silver_searcher
pkgver=git
pkgrel=20161028
pkgdesc="A better grep"
arch=('i686' 'x86_64')
license=('Apache')
url="https://github.com/ggreer/the_silver_searcher"
groups=('base' 'base-devel')
depends=('libiconv' 'libintl' 'liblzma' 'xz' 'libpcre')
makedepends=('gettext-devel' 'libiconv-devel' 'pcre-devel' 'liblzma-devel' 'xz')
source=(git+https://github.com/ggreer/the_silver_searcher.git)
sha256sums=('SKIP')

prepare() {
  cd ${srcdir}/${srcname}

  autoreconf -fi
}

build() {
  cd ${srcdir}/${srcname}
  ./configure --build=${CHOST} \
      --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${srcname}
  make DESTDIR=${pkgdir} install
}
