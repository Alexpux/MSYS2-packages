pkgname=tup
# hyphens are forbidden in pkgver.
pkgver=v0.7.8_17_g8a00a5ce
pkgrel=1
epoch=
pkgdesc="file-based build system that learns dependencies by watching file reads and writes"
arch=("any")
url="https://gittup.org"
license=('GPL2')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://gittup.org/tup/win32/$pkgname-$(sed 's/_/-/g' <<< $pkgver).zip")
noextract=()
md5sums=("596e51b9655d9ff3f0dcea158c29a443")
sha512sums=("f0b8cdf985c70fc0b565377e52d57590ff26fa1588de56cc0ed32ef8a6799a53b3abbd15f99beeca58f4b18fa6f614ac2f3a4a544e2ca0af58ab78bf4471ff22")
validpgpkeys=()

package() {
        mandir="$pkgdir"/usr/share/man/man1
        bindir="$pkgdir"/usr/bin/
        mkdir -p "$mandir" "$bindir"
        cp "$srcdir"/tup.1 "$mandir"
        cp "$srcdir"/{*.exe,*.dll} "$bindir"
}
