# Maintainer: Orphaned
# I'm not planning to maintain this, and I don't think a new version will be coming out anytime soon anyway
pkgname=fortune-mod
pkgver=9708
pkgrel=1
pkgdesc="Fortune-mod fortune cookie generator."
arch=('i686' 'x86_64')
url="http://www.ibiblio.org/pub/linux/games/amusements/fortune/"
license=('BSD')
depends=('pcre' 'libpcreposix')
makedepends=('pcre-devel' 'libpcreposix')
#options=()
#install=
#changelog=
source=("$url/$pkgname-$pkgver.tar.gz"
        "$pkgname-$pkgver-msys2.patch"
        "$pkgname-$pkgver-destdir.patch")

md5sums=('81a87a44f9d94b0809dfc2b7b140a379'
         '487a809c04bec78a84c6dd8c0a7fc0a6'
         'a5a0521b25ca3ca0526fb5cbc58fab67')

prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver-msys2.patch"
	patch -p1 -i "$srcdir/$pkgname-$pkgver-destdir.patch"
}

build() {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
