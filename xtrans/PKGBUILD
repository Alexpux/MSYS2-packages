# Maintainer: Alexey Pavlov <alexpux@gmail.com>

pkgname="xtrans"
pkgver=1.3.5
pkgrel=1
pkgdesc="a library of code that is shared among various X packages (development)"
arch=('i686' 'x86_64')
url="http://www.x.org/"
license=('MIT')
groups=('development')
makedepends=('gcc' 'util-macros' 'xmlto')
depends=()
options=()
source=("http://xorg.freedesktop.org/releases/individual/lib/$pkgname-$pkgver.tar.bz2"{,.sig})
sha256sums=('adbd3b36932ce4c062cd10f57d78a156ba98d618bdb6f50664da327502bc8301'
            'SKIP')

prepare() {
  cd "${srcdir}/$pkgname-$pkgver"
  autoreconf -ivf
}

build() {
  cd "${srcdir}/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

check() {
  cd "${srcdir}/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "${srcdir}/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
  install -Dm644 ./COPYING ${pkgdir}/usr/share/licenses/$pkgname/COPYING
}
