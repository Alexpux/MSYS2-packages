pkgname=php
pkgver=7.0.0RC5
pkgrel=1
pkgdesc='PHP is a popular general-purpose scripting language that is especially suited to web development'
makedepends=('autoconf' 'openssl-devel' 'libxml2-devel' 'libxslt-devel' 'libcurl-devel')
url='http://php.net/'
license=('PHP License')
arch=('i686' 'x86_64')
source=("https://github.com/php/php-src/archive/php-${pkgver}.tar.gz")
md5sums=('7ff1fd4d57f40f5286aff102c67973bb')

build() {
  cd "${srcdir}/php-src-php-${pkgver}"
   ./buildconf --force
   ./configure --prefix=/usr --enable-static --enable-embed=static --disable-fpm --disable-posix --disable-inline-optimization --enable-fd-setsize=256 --enable-maintainer-zts --disable-shared --with-readline --with-openssl --with-zlib --enable-zip --with-libxml-dir --with-libexpat-dir --with-xsl --enable-wddx --enable-soap --with-xmlrpc  --with-jpeg-dir --with-png-dir --enable-gd-native-ttf --enable-gd-jis-conv --with-freetype-dir --enable-exif --enable-calendar --with-curl  --enable-ftp --with-libmbfl --with-onig --enable-mbstring --enable-sockets --enable-shmop --enable-bcmath --with-gmp --enable-intl  --with-iconv-dir --with-gettext --with-mhash   --enable-mysqlnd --with-mysqli=mysqlnd --with-pdo-mysql=mysqlnd --disable-filter --disable-phar
  make
}

package() {
  cd "${srcdir}/php-src-php-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
